<Window x:Class="Example.Views.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example.Views"
        mc:Ignorable="d"
        Title="Пользователь" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="10">
            <TextBlock x:Name="WelcomeText" 
                      Text="Новости"
                      Foreground="White" 
                      FontSize="20" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Список новостей -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="NewsListControl" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" 
                               BorderThickness="0,0,0,1" 
                               Padding="0,0,0,15"
                               Margin="0,0,0,15">
                            <StackPanel>
                                <!-- Заголовок новости -->
                                <TextBlock Text="{Binding Title}" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,10"
                                          Foreground="#333"/>

                                <!-- Описание новости -->
                                <TextBlock Text="{Binding Description}" 
                                          FontSize="14"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,10"/>

                                <!-- Изображение новости -->
                                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                                    <Image Width="600" Source="{Binding ImagePath}"/>
                                </StackPanel>

                                <!-- Разделитель -->
                                <Border Height="1" Background="#E0E0E0" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
